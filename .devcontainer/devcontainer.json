{
	"postStartCommand": "cd ${containerWorkspaceFolder}/.devcontainer && sh ./post-start.sh",
	"userEnvProbe": "loginInteractiveShell",
	"customizations": {
	  "vscode": {
		"extensions": [
		  "mikestead.dotenv",
		  "mrmlnc.vscode-duplicate",
		  "mindpixel-labs.vsc-expressionengine",
		  "sleistner.vscode-fileutils",
		  "heybourn.headwind",
		  "bradgashler.htmltagwrap",
		  "KalimahApps.tailwindcss-kit",
		  "rangav.vscode-thunder-client",
		  "william-voyek.vscode-nginx"
		]
	  }
	},
	"postCreateCommand": "cd ${containerWorkspaceFolder}/.devcontainer && sh ./post-create.sh",
	"image": "mcr.microsoft.com/devcontainers/base:bullseye",
	"runArgs": [
	  "--env-file",
	  "${localWorkspaceFolder}/.env"
	],
	"appPort": [
	  80,
	  443,
	  3306
	],
	"features": {
	  "ghcr.io/devcontainers/features/docker-in-docker:2": {
		"version": "latest",
		"enableNonRootDocker": "true",
		"moby": "true"
	  },
	  "ghcr.io/devcontainers/features/node:1": {
		"version": "18",
		"nvmVersion": "latest",
		"nodeGypDependencies": true,
		"installYarnUsingApt": true
	  }
	},
	"name": "Docker in Docker",
	"forwardPorts": [
	  80,
	  443,
	  3306
	],
	"containerEnv": {
	  "WORKSPACE_FOLDER": "${containerWorkspaceFolder}"
	},
	"mounts": [
	  "source=${localEnv:HOME}/.devcontainer_bash_history,target=/root/.bash_history,type=bind"
	]
}